  body
    // SECTION SLIDER
    section#slide
      .slides-container
        .slides.slide-two
          img(src='/images/slide1.png')
          .slide-text
        .slides.slide-three
          img(src='/images/slide2.png')
          .slide-text
        .slides.slide-one
          img(src='/images/slide3.png')
          .slide-text
        a.prev(onclick='plusSlides(-1)') ❮
        a.next(onclick='plusSlides(1)') ❯
    // END SECTION SLIDER
    // SECTION FOOTER
    section#footer
      .container
        .foot.row.navbar.navbar-default
          .col-md-2.text-left
            img#logo(src='/images/SG.png', alt='')
          .col-md-8
            button.btn.btn-danger CONTACTEZ VOTRE CONSEILLER
          .col-md-1.text-right
            a(href='#')
              i.fa.fa-facebook-square.fa-2x(aria-hidden='true')
          .col-md-1.text-center
            a(href='#')
              i.fa.fa-twitter-square.fa-2x(aria-hidden='true')
    // END SECTION FOOTER
    script(src='/sg.js')